{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.6.2",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.hr.cloud.sap/*",
        "https://*.sapsf.com/*",
        "https://*.sapsf.cn/*",
        "https://*.sapcloud.cn/*",
        "https://*.successfactors.eu/*",
        "https://*.sapsf.eu/*",
        "https://*.successfactors.com/*",
        "https://*.s4hana.ondemand.com/*",
        "https://*.s4hana.cloud.sap/*",
        "https://*.hana.ondemand.com/*",
        "https://*.cfapps.us10.hana.ondemand.com/*",
        "https://*.cfapps.eu10.hana.ondemand.com/*",
        "https://*.cfapps.ap21.hana.ondemand.com/*",
        "https://*.build.cloud.sap/*",
        "https://*.ibp.cloud.sap/*",
        "https://*.scmibp.ondemand.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "side_panel": {
    "default_path": "panel/side-panel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/injected.js",
        "resources/dc.json",
        "resources/profile-global.json",
        "resources/profile-successfactors.json",
        "resources/profile-s4hana.json",
        "resources/profile-btp.json",
        "resources/profile-executive.json",
        "resources/profile-golive.json",
        "panel/prompts/*.txt"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}